(define server_port 8080)
(define server_host "localhost")
(define ssl_enabled true)

server {
    port: server_port
    host: server_host
    workers: 4
    timeout: 30.5
    ssl {
        enabled: ssl_enabled
        cert_path: "/etc/ssl/cert.pem"
        key_path: "/etc/ssl/key.pem"
        protocols: {"TLSv1.2", "TLSv1.3"}
    }
    logging {
        level: "info"
        path: "/var/log/server.log"
        rotate: true
    }
}
