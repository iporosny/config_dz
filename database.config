(define max_connections 100)
(define db_timeout 30)

database {
    host: "localhost"
    port: 5432
    name: "app_db"
    user: "admin"

    connection {
        pool_size: max_connections
        timeout: db_timeout
        retries: 3
        ssl: false
    }

    replication {
        enabled: true
        master: "db-master"
        slaves: {"slave1", "slave2", "slave3"}
    }
}
